<script>
Handlebars.registerHelper("add", function(dish) {
 console.log(dish)
let input= document.getElementById(dish)
input.value += 1
let result= input.value + 1;
let total= document.getElementById('total')
total += result
} )
Handlebars.registerHelper("reduce", function(dish) {
console.log(dish)
let input= document.getElementById(dish)
input.value -= 1
let result= input.value - 1;
let total= document.getElementById('total')
total -= result
    
})
</script>
